<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!-- for this examplo to work properly you must define the following
	custom fields:
	FieldText type=text
	FieldCombo type=combo values=Value1,Value2
-->
<tree>
	<folder name="folder_1">
		<title lang="english">the folder 1</title>
		<fields>
			<field mandatory="no">
				<name>FieldText</name>
				<value>Value for field text</value>
			</field>
		</fields>
		<folder name="folder_1_1">
			<title lang="english">one folder_1_1</title>
		</folder>
		<folder name="folder_1_2">
			<folder name="folder_1_2_1"/>
			<fields>
				<field mandatory="yes">
					<name>FieldCombo</name>
					<value>Value1</value>
				</field>
			</fields>
		</folder>
	</folder>
	<folder name="folder_2">
		<title lang="english">one folder_2</title>
	</folder>
</tree>